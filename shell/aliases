# Hold all the aliases I use/find handy.

alias a='php artisan'
alias bbd='brew bundle dump --force --describe'
alias bg='batgrep'
alias c='php bin/console'
alias code='codium'
alias dots='vim $HOME/.dotfiles/'
alias ftrail='<<<${(F)fpath}'
alias ga='git add'
alias gch='git checkout'
alias gco='git commit -m'
alias gd='git diff'
alias gp='git push'
alias gs='git status'
alias k='clear'
alias ll='eza -laFgh --git --icons --color=always'
alias lla='ls -lhFa'
alias nvimconf='vim $HOME/.config/nvim/'
alias pla='cd $HOME/playground/'
alias pro='cd $HOME/projects/'
alias sh-bash='sudo ln -sfv /bin/bash /private/var/select/sh'
alias sh-dash='sudo ln -sfv /bin/dash /private/var/select/sh'
alias trail='<<<${(F)path}'
alias vim='nvim'
