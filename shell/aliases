alias co='php bin/console'
alias code='codium'
alias com='composer'
alias dots='vim $HOME/.dotfiles/'
alias ftrail='<<<${(F)fpath}'
alias ga='git add'
alias gch='git checkout'
alias gco='git commit -m'
alias gd='git diff'
alias gp='git push'
alias gs='git status'
alias k='clear'
alias ll='eza -laghF --git --icons --color=always'
alias lla='ls -lhFa'
alias nvimconf='vim $HOME/.config/nvim/'
alias pla='cd $HOME/playground/'
